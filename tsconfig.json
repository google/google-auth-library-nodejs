{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "rootDir": ".",
    "outDir": "build",
    "target": "es5",
    "sourceMap": true
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "test/*.ts",
    "test/**/*.ts",
    "system-test/*.ts",
    "browser-test/*.ts",
    "browser-test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test/fixtures"
  ]
}
